#:import palette_label palette_label

<PaletteInfoToolInfoLabel@ToolBarLabel>:
    height: 200

<PaletteLabel@ToolBarLabel>:
    height: 160
    width: 640

<ColorButtonsGridLayout>
    cols: 32
    rows: 8

<PaletteColorButton>:
    size:(20,20)
    canvas.after:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.x + 1 , self.y + 1
            size: self.width - 2, self.height - 2



<ColorPickerPopup>:
    title: 'Color Select'
    size_hint: None, None
    size: 400,400

<MyColorPicker>:
    MyColorPickerButton:
        text: 'Select'
        pos_hint: {'center_x': .76, 'y': .03}
        size_hint: None, None
        size: 100, 50


<CurrentColorLabel@ToolBarLabel>:
    size: (80, 80)
    canvas.after:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.x + 3 , self.y + 3
            size: self.width - 6, self.height - 6

<ToolInfoLabel@ToolBarLabel>:
    height: 120
    width: 320