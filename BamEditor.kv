# File name: BamEditor.py
<ToolBarLabel>
    bcolor: 103/255, 97/255, 97/255, 1
    canvas.before:
        Color:
            rgba: 73/255, 67/255, 67/255, 1
        Rectangle:
            pos: self.x , self.y
            size: self.width, self.height
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.x + 3, self.y +3
            size: self.width-6, self.height-6



