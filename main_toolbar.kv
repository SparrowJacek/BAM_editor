#:import main_toolbar main_toolbar

<MainToolbarLabel@ToolBarLabel>:
    height: 38

<NewFileButton>:
    size: 32, 32
    Image:
        source: r'.\static\icons\new-icon.png'
        pos: root.x, root.top - self.height
        size: self.parent.size

<OpenFileButton>:
    size: 32, 32
    Image:
        source: r'.\static\icons\open-file-icon.png'
        pos: root.x, root.top - self.height
        size: self.parent.size

<OpenFilePopup>:
    size_hint: None, None
    size: 800,600
    title: 'Open file'
    id: openfilepopup

    BoxLayout:
        spacing: 5
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            Splitter:
                sizable_from: 'right'
                size_hint: (.25, 1)
                id: splitter

                ScrollView:

                    TreeViewBrowser:
                        browser: open_file_chooser
                        id: link_tree
                        size_hint_y: None
                        height: self.minimum_height


            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: None
                    height: sp(52)

                    Button:
                        text: 'Icon View'
                        on_press: open_file_chooser.view_mode = 'icon'
                    Button:
                        text: 'List View'
                        on_press: open_file_chooser.view_mode = 'list'

                FileChooser:
                    id: open_file_chooser
                    filters: ['*.bmp', '*.BMP', '*.bam', '*.BAM']
                    FileChooserIconLayout
                    FileChooserListLayout

        PrettyBoxLayer:
            spacing: 2
            size_hint_y: None
            height: 38

            FilePathTextInput:
                id: 'filepath_input'
                height: 32
                size_hint_y: None
                pos_hint: {'x': .5, 'y': .1}
                multiline: False

            FileSubmitButton:
                height: 32
                size_hint_x: None
                width: 80
                text: 'Open'


<SaveFileButton>:
    size: 32, 32
    Image:
        source: r'./static/icons/save-icon.png'
        pos: root.x, root.top - self.height
        size: self.parent.size

<UndoButton>:
    size: 32, 32
    Image:
        source: r'./static/icons/undo-icon.png'
        pos: root.x, root.top - self.height
        size: self.parent.size

<RedoButton>:
    size: 32, 32
    Image:
        source: r'./static/icons/redo-icon.png'
        pos: root.x, root.top - self.height
        size: self.parent.size
